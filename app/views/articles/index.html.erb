<h1 style="padding: 15px;"> <strong>Articles</strong> </h1>

<table style="margin-bottom: 20px;">

    <thead>
        <tr>
            <th style="padding: 15px;">Number</th>
            <th style="padding: 15px;">Title</th>
            <th style="padding: 15px;">Description</th>
            <th style="padding: 15px;">Action</th>
        </tr>
    </thead>

    <tbody>
        <% number = 0%>

        <% @articles.each do |result| %>
            <tr>
                <td style="text-align:center; padding: 10px;"><%= number += 1 %></td>
                <td style="text-align:center; padding: 10px;"><%= result.title %></td>
                <td style="text-align:center; padding: 10px;"><%= result.description %></td>
                <td style="text-align:center; padding: 10px; display: flex;">
                    <%= link_to "Edit", edit_article_path(result), class: "btn-link" ,style: "cursor: pointer; text-decoration: none; color: black;" %>
                    <%= link_to "Delete", result, class: "btn-link" ,data: { "turbo-method": :delete, "turbo_confirm": 'Are you sure?' }, style: "margin: 0 7px 0 7px ;cursor: pointer; text-decoration: none; color: black;" %>
                    <%= link_to "Detail", article_path(result.id), class: "btn-link" ,style: "cursor: pointer; text-decoration: none; color: black;" %>
                </td>
            </tr>
        <% end %>
    
        </tbody>

</table>

 <%= link_to "Create Article", new_article_path, style: "cursor: pointer; text-decoration: none; color: black; margin-left: 15px;" %>