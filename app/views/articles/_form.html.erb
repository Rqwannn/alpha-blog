<% if @article.errors.any? %>

    <h2>The Following Errors</h2>

    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>

<% end %>

<%= form_with(model: @article, local: true) do |value| %>

    <div class="form-group mb-3">
        <p>
            <%= value.label :title %>
        </p>
        <%= value.text_field :title, placeholder: 'Masukan Title', class: 'title form-control' %>
    </div>

    <div class="form-group mb-3">
         <p>
            <%= value.label :description %>
        </p>
        <%= value.text_area :description, placeholder: 'Masukan Description', class: 'description form-control' %>
    </div>

    <div>
        <%= value.submit @form, class: "btn btn-primary mb-3" %>
    </div>
<% end %>